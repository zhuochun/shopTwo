<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %><br>
  <%= f.association :category %><br>
  <%= f.association :manufacturer %><br>
  <%= f.input :barcode %><br>
  <%= f.input :daily_price %><br>
  <%= f.input :cost_price %><br>
  <%= f.input :current_stock %><br>
  <%= f.input :minimum_stock %><br>
  <%= f.input :bundle_unit %><br>

  <%= f.submit %>
<% end %>
