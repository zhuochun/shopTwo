<div class="product-detail row">
  <div class="col-md-6">
    <h2><%= product.name %></h2>

    <p>
      <strong>Category:</strong>
      <%= product.category.name %>
    </p>

    <p>
      <strong>Manufacturer:</strong>
      <%= product.manufacturer.name %>
    </p>

    <p>
      <strong>Barcode:</strong>
      <%= product.barcode %>
    </p>

    <p>
      <strong>Current Price:</strong>
      <%= number_to_currency product.daily_price %>
    </p>

    <% if can? :view, Product %>
    <p>
      <strong>Predicted Price:</strong>
      <%= number_to_currency product.new_daily_price %>
      <%= link_to 'Accept', update_price_product_path(product), remote:true, method: :patch if can? :edit, Product %>
    </p>

    <p>
      <strong>This Week Sell:</strong>
      <%= product.weekly_sell %>
    </p>

    <p>
      <strong>This Month Sell:</strong>
      <%= product.monthly_sell %>
    </p>

    <p>
      <strong>Cost Price:</strong>
      <%= number_to_currency product.cost_price %>
    </p>

    <p>
      <strong>Current Stock:</strong>
      <%= product.current_stock %>
    </p>

    <p>
      <strong>Minimum Stock:</strong>
      <%= product.minimum_stock %>
    </p>
    <% end %>

    <p>
      <strong>Bundle Unit:</strong>
      <%= product.bundle_unit %>
    </p>
  </div>
  <div class="col-md-6">
    <% if can? :view, Product %>
      <h2>Actions</h2>

      <% if can? :create, Stock %>
        <%= link_to 'Stock this Product', new_product_stock_path(product) %>
      <% end %>
    <% end %>
  </div>
</div>
