<%= simple_form_for(@stock) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :product, include_blank: false, disabled: !@stock.new_record? %>

    <%= f.input :quantity %>
    <%= f.input :minimum %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
