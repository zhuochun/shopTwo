<h1>Add a New Stock</h1>

<%= link_to 'Back', url_for(:back) %>

<hr>

<div class="row">
  <div class="col-xs-12">
    <form method="get" action="<%= new_stock_path %>">
      <div class="input-group input-group-lg">
        <input type="text" class="form-control" name="q" placeholder="Find Product">
        <span class="input-group-btn">
          <button type="submit" class="btn btn-default">Search</button>
        </span>
      </div>
    </form>
  </div>
</div>

<% unless @stock.product_id.nil? and @products.empty? %>
  <div class="row">
    <h2>Stock</h2>
    <div class="col-sm-6" id="stock-form">
      <%= render 'form' %>
    </div>
    <div class="col-sm-6" id="stock-info">
      <%= render "stock_information" %>
    </div>
  </div>
<% end %>
