<div class="row">
  <div class="col-sm-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    <h2>Register on ShopTwo</h2>
  </div>

  <div class="col-sm-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    <%= simple_form_for(resource, as: resource_name,
                        defaults: { wrapper_html: {class: 'form-group'}, input_html: {class: 'form-control'} },
                        url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <%= f.input :username, required: true, autofocus: true %>
      <%= f.input :phone, as: :tel %>
      <%= f.input :email, as: :email, required: true %>
      <%= f.input :password, autocomplete: "off", required: true %>
      <%= f.input :password_confirmation, autocomplete: "off", required: true %>

      <%= f.button :submit, "Register", class: "btn btn-primary" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
