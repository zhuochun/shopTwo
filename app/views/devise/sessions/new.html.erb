<div class="row">
  <div class="col-sm-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    <h2>Sign in on ShopTwo</h2>
  </div>

  <div class="col-sm-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    <%= simple_form_for(resource, as: resource_name,
                        defaults: { wrapper_html: {class: 'form-group'}, input_html: {class: 'form-control'} },
                        url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true %>
      <div class="boolean optional user_remember_me form-group">
        <input name="user[remember_me]" type="hidden" value="0">
        <label class="checkbox-inline">
          <input type="checkbox" name="user[remember_me]" id="user_remember_me" value="1">
          Remember Me
        </label>
      </div>

      <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
