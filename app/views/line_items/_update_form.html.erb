<%= simple_form_for(item) do |f| %>
      <input type="number" min="1" max="99"
        name="line_item[quantity]"
        class="line-item-quantity form-control"
        value="<%= item.quantity %>"
        data-quantity="<%= item.quantity %>" />
  <%= f.submit "Update", class: "btn btn-warning hidden update-line-item-quantity" %>
<% end %>
