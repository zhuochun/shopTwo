<div class="row">
  <div class="col-sm-12 col-md-3 secondary">
    <div class="panel panel-<%= current_user.role %>">
      <div class="panel-heading">
        <h3 class="panel-title">
          Hi, <%= current_user.username %>
        </h3>
      </div>
      <div class="panel-body">
        <p><%= current_user.role.titleize %></p>
        <p>
          <%= link_to "Profile", edit_user_registration_path, class: "navbar-link" %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-link" %>
        </p>
      </div>
    </div>
  </div>

  <div class="col-sm-12 col-md-9 primary">
    <h1>Dashboard</h1>

    <h2>Statistics</h2>
    Products: <%= Product.all.count %>
    Categories: <%= Category.all.count %>
    Manufacturers: <%= Manufacturer.all.count %>
  </div>
</div>
