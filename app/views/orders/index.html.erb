<% if can? :view, Order %>
  <h1>Orders</h1>
<% else %>
  <h1>Your Orders</h1>
<% end %>

<hr>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Date</th>
      <% if can? :view, Order %>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
      <% end %>
      <th>Quantity</th>
      <th>Price</th>
      <th></th>
      <% if can? :view, Order %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <%= render @orders %>
  </tbody>
</table>

<%= will_paginate @orders %>
