<% if can? :view, Order %>
  <h1>Online Orders</h1>
<% else %>
  <h1>Your Online Orders</h1>
<% end %>

<hr>

<% if @orders.empty? %>
  <p class="lead text-muted">No online orders yet.</p>
<% else %>
  <table class="table table-striped table-hover table-responsive">
    <thead>
      <tr>
        <th>Date</th>
        <% if can? :view, Order %>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
        <% end %>
        <th>Quantity</th>
        <th>Total</th>
        <th></th>
        <% if can? :view, Order %>
          <th></th>
          <th></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <%= render @orders %>
    </tbody>
  </table>
<% end %>

<%= render "shop_orders/orders" %>

<%= will_paginate @orders %>
