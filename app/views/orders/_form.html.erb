<%= simple_form_for(@order, defaults: { wrapper_html: {class: 'form-group'}, input_html: {class: 'form-control'} }) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-sm-4">
      <%= f.input :name %>
      <%= f.input :address, label: "Shipping Address", input_html: { rows: 4 } %>
    </div>
    <div class="col-sm-8">
      <div class="row">
        <div class="col-sm-6">
          <%= f.input :phone %>
          <%= f.input :email %>
        </div>
        <div class="col-sm-6">
          <%= f.input :pay_type, label: "Payment Method", collection: Order::PAYMENT_TYPES, include_blank: false %>
          <%= f.input :credit_card, label: "Credit Card Number", required: true %>
        </div>
      </div> <!-- .row -->
      <div class="row">
        <div class="col-sm-12">
          <%= f.input :used_credit, as: :decimal, label: "Apply your credits", hint: "You have #{number_with_precision current_user.credits, precision: 2} credits available.", input_html: { step: 0.10, min: 0, max: current_user.credits } %>
        </div>
      </div> <!-- .row -->
    </div>
  </div>
<% end %>
