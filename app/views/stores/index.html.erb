<h1>Stores</h1>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Address</th>
      <th>Location</th>
      <th>Contact</th>
      <th>Operation hours</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.size %></td>
        <td><%= store.address %></td>
        <td><%= store.location %></td>
        <td><%= store.contact %></td>
        <td><%= store.operation_hours %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @stores %>

<br>

<%= link_to 'New Store', new_store_path %>
