<%= simple_form_for(@store) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :size %>
    <%= f.input :address %>
    <%= f.input :geo_latitude %>
    <%= f.input :geo_longitude %>
    <%= f.input :contact %>
    <%= f.input :operation_hours %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
