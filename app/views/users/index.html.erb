<h1>Users</h1>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>No.</th>
      <th>Username</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Credits</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, idx| %>
      <tr>
        <td><%= idx + 1 %></td>
        <td><%= user.username %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= user.credits %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users %>
