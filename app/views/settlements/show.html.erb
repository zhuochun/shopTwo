<h1>Transaction Summary <small><%= @settlement.created_at.strftime("%B %d, %Y") %></small></h1>
<h2><%= @settlement.store.name %></h2>

<h3>Products</h3>
<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Product</th>
      <th>Barcode</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total Price</th>
    </tr>
  </thead>

  <tbody>
    <% @settlement.settle_items.each do |item| %>
      <td><%= item.product.name %></td>
      <td><%= item.product.barcode %></td>
      <td><%= item.price %></td>
      <td><%= item.quantity %></td>
      <td><%= item.total_price %></td>
    <% end %>
  </tbody>
</table>

<hr />

<h3>Summary</h3>
<p>
  <strong>Total Items:</strong>
  <%= @settlement.total_count %>
</p>

<p>
  <strong>Total price:</strong>
  <%= @settlement.total_price %>
</p>

<%= link_to 'Back', settlements_path %>
