<h1>Transaction Summary <small><%= @settlement.created_at.strftime("%B %d, %Y") %></small></h1>
<h2><%= @settlement.store.name %></h2>

<h3>Products</h3>
<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Product</th>
      <th>Barcode</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total Price</th>
    </tr>
  </thead>

  <tbody>
    <% @settlement.settle_items.each do |item| %>
      <tr>
        <td><%= item.name.titleize %></td>
        <td><%= item.barcode %></td>
        <td><%= number_to_currency item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency item.total_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<h3>Summary</h3>
<h4>
  <strong>Total Items:</strong>
  <%= @settlement.total_count %>
</h4>

<h4>
  <strong>Total Revenue:</strong>
  <%= number_to_currency @settlement.total_price %>
</h4>

<hr />

<%= link_to 'Back', settlements_path %>
